name: ml_pipeline

conda_env: conda.yml

entry_points:
  download_data:
    parameters:
      url: {type: string, default: "https://cloud.beuth-hochschule.de/index.php/s/atJrn3bPWayqEQ6/download"}
      path: {type: string, default: "data"}
      filename: {type: string, default: "raw_data.csv"}
    command: "python download_raw_data.py --url {url} --path {path} --filename {filename}"

  validate_data:
    parameters:
      raw_data_csv: {type: string, default: "data/raw_data.csv"}
      validated_data_csv: {type: string, default: "data/validated_data.csv"}
    command: "python validate_data.py --raw-data-csv {raw_data_csv} --validated-data-csv {validated_data_csv}"

  split_data:
    parameters:
      validated_data_csv: {type: string, default: "data/validated_data.csv"}
      test_size: {type: float, default: 0.2}
      random_state: {type: int, default: 42}
      train_csv: {type: string, default: "data/train.csv"}
      test_csv: {type: string, default: "data/test.csv"}
    command: "python split_data.py --validated-data-csv {validated_data_csv} --test-size {test_size} --random-state {random_state} --train-csv {train_csv} --test-csv {test_csv}"

  train_keras:
    parameters:
      train_data_csv: {type: string, default: "data/train.csv"}
      test_data_csv: {type: string, default: "data/test.csv"}
      batch_size: {type: int, default: 32}
      epochs: {type: int, default: 1}
      max_features: {type: int, default: 2000}
      max_len: {type: int, default: 200}
      embed_size: {type: int, default: 128}
      model_name: {type: string, default: "model.onnx"}
      model_path: {type: string, default: "model"}
    command: "python kerasLSTM.py --train-data-csv {train_data_csv} --test-data-csv {test_data_csv}  --batch-size {batch_size}  --epochs {epochs}  --max-features {max_features}  --max-len {max_len}  --embed-size {embed_size}  --model-name {model_name}  --model-path {model_path}"

  main:
    command: "python main.py"